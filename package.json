{
  "private": true,
  "scripts": {
    "prepare": "husky install"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "husky": "7.0.4",
    "lint-staged": "12.1.7",
    "prettier": "2.5.1",
    "prettier-package-json": "2.6.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,ts,tsx,css,md}": "prettier --write",
    "package.json": "prettier-package-json --write"
  },
  "packageManager": "yarn@3.1.1",
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  }
}
